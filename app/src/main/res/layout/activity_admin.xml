<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.remoteclassnotes.AdminActivity">

    <TextView
        android:id="@+id/text_current_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Admin Homepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_download_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Download"
        app:layout_constraintEnd_toEndOf="@+id/text_current_user"
        app:layout_constraintStart_toStartOf="@+id/text_current_user"
        app:layout_constraintTop_toBottomOf="@+id/text_current_user" />

    <Button
        android:id="@+id/btn_upload_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/btn_download_file"
        app:layout_constraintStart_toStartOf="@+id/btn_download_file"
        app:layout_constraintTop_toBottomOf="@+id/btn_download_file" />
</android.support.constraint.ConstraintLayout>
